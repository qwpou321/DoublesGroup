<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoublesGroup.Views.AddPlayerPage"
             Title="Player Data Entry"
             BackgroundColor="White">
    <StackLayout Margin="20">
        <Editor x:Name="name"
                Placeholder="Name"
                HeightRequest="50" 
                Keyboard="Text"/>
        <Editor x:Name="level"
                Placeholder="Level"
                HeightRequest="50"
                Keyboard="Numeric"/>
        <Button Text="Save" 
                Clicked="OnSaveButtonClicked" />
    </StackLayout>
</ContentPage>